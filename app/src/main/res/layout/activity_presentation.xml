<?xml version="1.0" encoding="utf-8"?>
<com.denzcoskun.imageslider.ImageSlider
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.Splash.Presentation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/slider_P"
    app:iss_auto_cycle="false"
    app:iss_placeholder="@color/black"
    app:iss_error_image="@color/purple_500"
    app:iss_corner_radius="20"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|right">
        <TextView
            android:id="@+id/presSky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="10dp"
            android:text="@string/presSkip"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:paddingBottom="10dp">
        <Button
            android:id="@+id/presNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:text="@string/presNext"
            android:background="@drawable/efredbuttons3"
            android:textColor="@color/white"
            android:layout_marginHorizontal="40dp"/>
    </RelativeLayout>
</com.denzcoskun.imageslider.ImageSlider>